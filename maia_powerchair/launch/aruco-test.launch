<?xml version="1.0"?>
<launch>
	<remap from="/camera/image_raw" to="/camera"/>
	<remap from="/fiducial_images" to="/image"/>

	<node pkg="usb_cam" type="usb_cam_node" name="camera" output="screen">
		<param name="camera_frame_id" type="string" value="overhead_camera"/>  
		<param name="framerate" type="int" value="30"/>  
		<param name="image_width" type="int" value="640"/>  
		<param name="image_height" type="int" value="480"/>  
		<param name="video_device" type="string" value="/dev/video0"/>  
		<param name="pixel_format" type="string" value="yuyv"/> 
		<param name="camera_info_url" type="string" value="file://$(find maia_powerchair)/params/camera.yaml"/>  	
	</node>
	
	<node pkg="aruco_detect" type="aruco_detect" name="aruco_detector" output="screen">	
		<param name="publish_images" type="bool" value="true"/>  
		<param name="dictionary" type="int" value="7"/> <!-- use ARUCO 5X5 https://chev.me/arucogen/ --> 
		<param name="fiducial_len" type="double" value="0.036"/>  <!-- set printed marker side length in meters-->		
	</node>
	
	
	<!--node pkg="image_view" type="image_view" name="image_view" output="screen">	
		<param name="autosize" type="bool" value="true"/> 
		<param name="window_name" type="string" value="Aruco detection"/> 
	</node-->
</launch>

